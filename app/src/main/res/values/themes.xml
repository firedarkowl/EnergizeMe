<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="background">@drawable/rosie_avocado_bg_3</item>
        <item name="android:textColor">@color/Text_grün_2</item>

        <item name="colorPrimary">@color/green_highland</item>
        <item name="colorOnPrimary">@color/Text_grün_2</item>
        <item name="colorPrimaryContainer">@color/brown_fallow</item>
        <item name="colorOnPrimaryContainer">@color/gelb_sandwisp</item>
        <item name="colorPrimaryVariant">@color/gelb_sandwisp</item>

        <item name="colorSecondary">@color/brown_copper</item>
        <item name="colorOnSecondary">@color/gelb_sandwisp</item>

        <item name="colorError">@color/rosa_1</item>
        <item name="colorOnError">@color/rosa_3</item>
        <item name="colorErrorContainer">@color/lila_1</item>
        <item name="colorOnErrorContainer">@color/lila_4</item>

        <item name="colorSurface">@color/gelb_1</item>
        <item name="colorOnSurface">@color/Text_grün_2</item>

        <item name="android:fontFamily">@font/font_by_rosie</item>
    </style>
    <style name="Theme.MyFirstApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyFirstApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyFirstApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
