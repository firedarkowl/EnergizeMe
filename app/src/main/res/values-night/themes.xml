<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFirstApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="background">@drawable/rosie_avocado_bg_3</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_pinetree</item>
        <item name="colorOnPrimary">@color/green_deco</item>
        <item name="colorPrimaryContainer">@color/green_calpoly</item>
        <item name="colorOnPrimaryContainer">@color/green_bayleaf</item>
        <item name="colorPrimaryVariant">@color/green_bayleaf</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_donkey</item>
        <item name="colorOnSecondary">@color/gelb_sandwisp</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font_by_rosie</item>
        <item name="android:textColor">@color/gelb_sandwisp</item>

        <item name="colorError">@color/brown_copper</item>
        <item name="colorOnError">@color/gelb_sandwisp</item>
        <item name="colorErrorContainer">@color/brown_fallow</item>
        <item name="colorOnErrorContainer">@color/gelb_1</item>

        <item name="colorSurface">@color/green_pinetree</item>
        <item name="colorOnSurface">@color/gelb_sandwisp</item>

    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyFirstApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
</resources>