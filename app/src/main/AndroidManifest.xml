<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Berechtigung zum Zugriff auf das Internet -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Berechtigung zum lesen des Netzwerk Statuses -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="EnergizeMe"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFirstApp"
        tools:targetApi="31">
        <activity
            android:name=".MeinProfil"
            android:exported="false"
            android:label="@string/title_activity_mein_profil"
            android:theme="@style/Theme.MyFirstApp" />
        <activity
            android:name="com.example.EnergizeMe.myfirstapp.ui.main.MeinTag"
            android:exported="false"
            android:label="@string/title_activity_mein_tag"
            android:theme="@style/Theme.MyFirstApp" />
        <activity
            android:name="com.example.EnergizeMe.myfirstapp.ui.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.EnergizeMe.myfirstapp.ui.main.UserView"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>